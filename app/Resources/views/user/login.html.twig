{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}
{% block body %}
    <div class="container container-fluid">
        <div class="row" style="margin-top: 25px; text-align: center">
            <div class="col-md-12 text-center">
                <h4>Login</h4>
            </div>
            <div class="col-md-12">
                <form action="/login-action" method="post">
                    <div class="col-md-12 text-center" style="margin-top: 12px;">
                        <div class="col-md-6 offset-md-3">
                            <input type="text" name="_username" class="form-control username" placeholder="Username" style="width: 100%;">
                        </div>

                    </div>
                    <div class="col-md-12" style="margin-top: 12px;">
                        <div class="col-md-6 offset-md-3">
                            <input type="password" name="_password" class="form-control password" placeholder="Password" style="width: 100%;">
                        </div>
                    </div>
                    <div class="col-md-12" style="text-align: center; margin-top: 12px;">
                        <input type="submit" name="submit" class="btn btn-primary" value="Log in">
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}


